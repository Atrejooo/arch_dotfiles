{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "height": 18,
    "padding": {
        "top": 6,          // Top padding
        "left": 2,         // Left padding
        "right": 5         // Right padding
    },
    "color": {             // Override logo colors
        "1": "blue",
        "2": "blue",
    }
  },
  "display": {
    "separator": "",
    "constants": [
      "   > ",
      "[+",
      "+]",
      "<{  ",
      "  }>",
    ],
    "percent": {
      "type": ["num", "bar"]
    },
    "bar": {
      "charElapsed": "#",
      "charTotal": "-",
      "borderLeft": "[",
      "borderRight": "]",
    },
    "key": {
      "width": 21,
    },
  },
  "modules": [
    {
      "type": "title",
      "format": "{$2}-----------------------{$4}{1}@{2}{$5}-----------------------{$3}  "
    },
    {
      "type": "os",
      "key": "{$1}OS",
      "keyColor": "blue",
    },
    {
      "type": "command",
      "key": "{$1}OS Age",
      "keyColor": "blue",
      "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
    },
    {
      "type": "packages",
      "key": "{$1}Packages",
      "keyColor": "magenta",
    },
    {
      "type": "kernel",
      "key": "{$1}Kernel",
      "keyColor": "green",
    },
    {
      "type": "bootmgr",
      "key": "{$1}Boot Manager",
      "keyColor": "green",
      "format": "{1}"
    },
    {
      "type": "wm",
      "key": "{$1}WM",
      "keyColor": "red",
    },
    {
      "type": "uptime",
      "key": "{$1}Uptime",
      "keyColor": "red",
    },
    {
      "type": "terminal",
      "key": "{$1}Terminal",
      "keyColor": "cyan",
    },
    {
      "type": "shell",
      "key": "{$1}Shell",
      "keyColor": "cyan",
    },
    {
      "type": "localip",
      "key": "{$1}Local IP",
      "keyColor": "yellow",
    },
    {
      "type": "break",
    },
    {
      "type": "custom",
      "format": "{$2}-----------------------{$4}    Hardware     {$5}-----------------------{$3}  "
    },
    {
      "type": "host",
      "key": "{$1}Host",
      "keyColor": "red",
    },
    {
      "type": "display",
      "key": "{$1}Display",
      "keyColor": "green",
    },
    {
      "type": "cpu",
      "key": "{$1}CPU",
      "keyColor": "magenta",
    },
    {
      "type": "gpu",
      "key": "{$1}GPU",
      "keyColor": "yellow",
    },
    {
      "type": "memory",
      "key": "{$1}Memory",
      "keyColor": "cyan",
    },
    {
      "type": "swap",
      "key": "{$1}Swap",
      "keyColor": "cyan",
    },
    {
      "type": "disk",
      "key": "{$1}Disk",
      "keyColor": "blue",
    },
    {
      "type": "btrfs",
      "key": "{$1}Allocated",
      "keyColor": "blue",
      "format": "{11} {6} / {7} ({9})"
    },
    {
      "type": "battery",
      "key": "{$1}Battery",
      "keyColor": "green",
      "format": "{4} [{2} - {3}] {10}",
    },
    {
      "type": "poweradapter",
      "key": "{$1}Power Adapter",
      "keyColor": "red",
    },
    {
      "type": "break",
    },
    {
      "type": "custom",
      "format": "{$2}-----------------------{$4}      Theme      {$5}-----------------------{$3}  "
    },
    {
      "type": "theme",
      "key": "{$1}Theme",
      "keyColor": "cyan",
    },
    {
      "type": "wmtheme",
      "key": "{$1}WM Theme",
      "keyColor": "cyan",
    },
    {
      "type": "de",
      "key": "{$1}DE",
      "keyColor": "cyan",
    },
    {
      "type": "font",
      "key": "{$1}Font",
      "keyColor": "blue",
    },
    {
      "type": "terminalfont",
      "key": "{$1}Terminal Font",
      "keyColor": "blue",
    },
    {
      "type": "icons",
      "key": "{$1}Icons",
      "keyColor": "red",
    },
    {
      "type": "cursor",
      "key": "{$1}Cursor",
      "keyColor": "red",
    },
    {
      "type": "locale",
      "key": "{$1}Locale",
      "keyColor": "yellow",
    },
    {
      "type": "break",
    },
    {
      "type": "colors",
      "paddingLeft": 5,
      "symbol": "diamond",
    },
    {
      "type": "break",
    },
    {
      "type": "custom",
      "format": "\\______                                                             ______/  ",
    },
  ]
}
